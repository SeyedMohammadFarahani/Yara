<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.ansarbank.room.widget.EditText
                android:id="@+id/transferCalender"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/charge_edittext_back"
                android:drawableRight="@drawable/calendar"
                android:gravity="center"
                android:hint="/"
                android:inputType="text"
                android:maxLength="5"
                android:padding="@dimen/_7sdp"
                android:paddingTop="@dimen/_20sdp"
                android:singleLine="true"
                android:textColor="#448aff"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/l33"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/text57" />

            <com.ansarbank.room.widget.EditText
                android:id="@+id/transferCCV2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/charge_edittext_back"
                android:drawableRight="@drawable/cardiconsmall"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:padding="@dimen/_7sdp"
                android:paddingTop="@dimen/_20sdp"
                android:singleLine="true"
                android:textColor="#448aff"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/l31"
                app:layout_constraintTop_toBottomOf="@+id/text56" />

            <com.ansarbank.room.widget.Text
                android:id="@+id/text57"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="تاریخ انقضا"
                android:textColor="#2a2e33"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/l33"
                app:layout_constraintTop_toBottomOf="@+id/serialNumber3" />

            <TextView
                android:id="@+id/text56"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="CCV2"
                android:textColor="#2a2e33"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintTop_toBottomOf="@+id/serialNumber3" />

            <android.support.constraint.Guideline
                android:id="@+id/l33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.45" />

            <android.support.constraint.Guideline
                android:id="@+id/l31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.55" />

            <android.support.constraint.Guideline
                android:id="@+id/l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.03" />

            <android.support.constraint.Guideline
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.97" />


            <com.ansarbank.room.widget.Btn
                android:id="@+id/transferButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/charge_button_back"
                android:drawableRight="@drawable/forward"
                android:elevation="@dimen/_4sdp"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="انتقال وجه  "
                android:textColor="#ffffff"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/transferCCV2"
                app:layout_constraintVertical_bias="1.0" />

            <com.ansarbank.room.widget.Text
                android:id="@+id/text15"
                android:layout_width="150dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:text="شماره کارت مقصد "
                android:textColor="#2a2e33"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintTop_toTopOf="parent" />

            <com.ansarbank.room.widget.Text
                android:id="@+id/text16"
                android:layout_width="170dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="مبلغ مورد نظر(ریال) "
                android:textColor="#2a2e33"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintTop_toBottomOf="@+id/endCard" />

            <com.ansarbank.room.widget.Text
                android:id="@+id/text14"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="رمز دوم"
                android:textColor="#2a2e33"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintTop_toBottomOf="@+id/startCard" />

            <com.ansarbank.room.widget.Text
                android:id="@+id/text13"
                android:layout_width="140dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="شماره کارت مبدا "
                android:textColor="#2a2e33"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintTop_toBottomOf="@+id/payValue" />

            <com.ansarbank.room.widget.EditText
                android:id="@+id/serialNumber3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/charge_edittext_back"
                android:drawableRight="@drawable/cardicon2"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="12"
                android:padding="@dimen/_7sdp"
                android:paddingTop="@dimen/_20sdp"
                android:singleLine="true"
                android:textColor="#448aff"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/text14" />

            <com.ansarbank.room.widget.MyAutoComplete
                android:id="@+id/endCard"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/charge_edittext_back"
                android:drawableRight="@drawable/cardicon"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="16"
                android:padding="@dimen/_7sdp"
                android:singleLine="true"
                android:textColor="#448aff"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/text15" />

            <com.ansarbank.room.widget.EditText
                android:id="@+id/payValue"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/charge_edittext_back"
                android:drawableRight="@drawable/coin"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:padding="@dimen/_7sdp"
                android:paddingTop="@dimen/_20sdp"
                android:singleLine="true"
                android:textColor="#448aff"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/text16" />

            <com.ansarbank.room.widget.MyAutoComplete
                android:id="@+id/startCard"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/charge_edittext_back"
                android:drawableRight="@drawable/cardicon"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="16"
                android:padding="@dimen/_7sdp"
                android:paddingTop="@dimen/_20sdp"
                android:singleLine="true"
                android:textColor="#448aff"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/text13" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/transferPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.Guideline
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"
            tools:ignore="DuplicateIds" />

        <android.support.constraint.Guideline
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_185sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/sad"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/l2"
            app:layout_constraintHorizontal_bias="0.57"
            app:layout_constraintStart_toStartOf="@+id/l1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.228" />

        <com.ansarbank.room.widget.Text
            android:id="@+id/text22"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/tranfer"
            android:textColor="#d0d0d0"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/l2"
            app:layout_constraintHorizontal_bias="0.582"
            app:layout_constraintStart_toStartOf="@+id/l1"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.126" />

        <com.ansarbank.room.widget.Text
            android:id="@+id/goTo"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:drawableRight="@drawable/buttonarrow"
            android:gravity="center"
            android:padding="2dp"
            android:text="رفتن به صفحه ی مدیریت کارت ها"
            android:textColor="#4a90e2"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/l2"
            app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintStart_toStartOf="@+id/l1"
            app:layout_constraintTop_toBottomOf="@+id/text22" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>