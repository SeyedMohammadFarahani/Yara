<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="3dp"
    android:background="#ffffff">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <com.ansarbank.room.widget.Text
            android:id="@+id/text41"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:text="زمان:"
            android:textColor="#8f8f8f"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text39" />

        <com.ansarbank.room.widget.Text
            android:id="@+id/text39"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:text="مبلغ:"
            android:textColor="#8f8f8f"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text38" />

        <com.ansarbank.room.widget.Text
            android:id="@+id/text38"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:text="مقصد:"
            android:textColor="#8f8f8f"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text42"
            tools:layout_editor_absoluteY="63dp" />

        <com.ansarbank.room.widget.Text
            android:id="@+id/startTransaction"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:gravity="right"
            android:text="1111 1111 1111 1111"
            android:textColor="#2a2e33"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/l1"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ansarbank.room.widget.Text
            android:id="@+id/endTransaction"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="4dp"
            android:layout_marginTop="4dp"
            android:gravity="right"
            android:text="1111 1111 1111 1111"
            android:textColor="#2a2e33"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/l1"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startTransaction" />

        <com.ansarbank.room.widget.Text
            android:id="@+id/valueTransaction"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="right"
            android:layout_margin="4dp"
            android:text=""
            android:textColor="#2a2e33"
            android:textSize="@dimen/_19ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/l1"
            app:layout_constraintTop_toBottomOf="@+id/endTransaction" />

        <com.ansarbank.room.widget.Text
            android:id="@+id/codeTransaction"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:gravity="right"
            android:layout_margin="4dp"
            android:text=""
            android:textColor="#448aff"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/l1"
            app:layout_constraintTop_toBottomOf="@+id/timeTransaction" />

        <com.ansarbank.room.widget.Text
            android:id="@+id/timeTransaction"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="right"
            android:layout_margin="4dp"
            android:text=""
            android:textColor="#2a2e33"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/l1"
            app:layout_constraintTop_toBottomOf="@+id/valueTransaction" />

        <com.ansarbank.room.widget.Text
            android:id="@+id/DateTransaction"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:gravity="right"
            android:text=""
            android:textColor="#2a2e33"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/timeTransaction"
            app:layout_constraintTop_toBottomOf="@+id/valueTransaction" />

        <com.ansarbank.room.widget.Text
            android:id="@+id/text44"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:gravity="right"
            android:text="ریال"
            android:layout_margin="4dp"
            android:textColor="#2a2e33"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/valueTransaction"
            app:layout_constraintTop_toBottomOf="@+id/endTransaction" />

        <com.ansarbank.room.widget.Text
            android:id="@+id/text42"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:text="مبدا:"
            android:textColor="#8f8f8f"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ansarbank.room.widget.Text
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:text="کد تراکنش:"

            android:textColor="#8f8f8f"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text41" />

        <ImageButton
            android:id="@+id/deleteTransferTransAction"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="#ffffff"
            android:scaleType="centerInside"
            android:src="@drawable/garbage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>