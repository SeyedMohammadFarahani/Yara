<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />

    <android.support.constraint.Guideline
        android:id="@+id/l33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />
    <android.support.constraint.Guideline
        android:id="@+id/l31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <android.support.constraint.Guideline
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97" />

    <com.ansarbank.room.widget.Btn
        android:id="@+id/tashilatConfirme"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="24dp"
        android:background="@drawable/charge_button_back"
        android:drawableRight="@drawable/forward"
        android:elevation="@dimen/_4sdp"
        android:gravity="center"
        android:padding="@dimen/_4sdp"
        android:text="تایید و ادامه"
        android:textColor="#ffffff"
        android:textSize="@dimen/_22ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/line2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/l1"
        app:layout_constraintTop_toBottomOf="@+id/calender" />

    <com.ansarbank.room.widget.Text
        android:id="@+id/text15"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="شماره تسهیلات "
        android:textColor="#2a2e33"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/line2"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ansarbank.room.widget.Text
        android:id="@+id/text16"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="مبلغ مورد نظر(ریال) "
        android:textColor="#2a2e33"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/line2"
        app:layout_constraintTop_toBottomOf="@+id/tashilatNumber" />

    <com.ansarbank.room.widget.Text
        android:id="@+id/text14"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="رمز دوم"
        android:textColor="#2a2e33"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/line2"
        app:layout_constraintTop_toBottomOf="@+id/startCard2" />

    <com.ansarbank.room.widget.Text
        android:id="@+id/text29"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="تاریخ انقضا"
        android:textColor="#2a2e33"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/l33"
        app:layout_constraintTop_toBottomOf="@+id/serialNumber4" />

    <TextView
        android:id="@+id/text30"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="CCV2"
        android:textColor="#2a2e33"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toStartOf="@+id/line2"
        app:layout_constraintTop_toBottomOf="@+id/serialNumber4" />

    <com.ansarbank.room.widget.Text
        android:id="@+id/text13"
        android:layout_width="140dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="شماره کارت مبدا "
        android:textColor="#2a2e33"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/line2"
        app:layout_constraintTop_toBottomOf="@+id/payValue2" />

    <com.ansarbank.room.widget.EditText
        android:id="@+id/calender"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/charge_edittext_back"
        android:drawableRight="@drawable/calendar"
        android:gravity="center"
        android:inputType="text"
        android:maxLength="5"
        android:hint="/"
        android:padding="@dimen/_7sdp"
        android:paddingTop="@dimen/_20sdp"
        android:singleLine="true"
        android:textColor="#448aff"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/l33"
        app:layout_constraintStart_toStartOf="@+id/l1"
        app:layout_constraintTop_toBottomOf="@+id/text29" />

    <com.ansarbank.room.widget.EditText
        android:id="@+id/CCV2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/charge_edittext_back"
        android:drawableRight="@drawable/cardiconsmall"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:padding="@dimen/_7sdp"
        android:paddingTop="@dimen/_20sdp"
        android:singleLine="true"
        android:textColor="#448aff"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/line2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/l31"
        app:layout_constraintTop_toBottomOf="@+id/text30" />

    <com.ansarbank.room.widget.EditText
        android:id="@+id/serialNumber4"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/charge_edittext_back"
        android:drawableRight="@drawable/cardicon2"
        android:gravity="center"
        android:inputType="numberPassword"
        android:maxLength="12"
        android:padding="@dimen/_7sdp"
        android:paddingTop="@dimen/_20sdp"
        android:singleLine="true"
        android:textColor="#448aff"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/line2"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/l1"
        app:layout_constraintTop_toBottomOf="@+id/text14" />

    <com.ansarbank.room.widget.EditText
        android:id="@+id/tashilatNumber"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:maxLength="16"
        android:background="@drawable/charge_edittext_back"
        android:drawableRight="@drawable/file"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:padding="@dimen/_7sdp"
        android:singleLine="true"
        android:textColor="#448aff"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/line2"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/l1"
        app:layout_constraintTop_toBottomOf="@+id/text15" />

    <com.ansarbank.room.widget.EditText
        android:id="@+id/payValue2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:maxLength="10"
        android:background="@drawable/charge_edittext_back"
        android:drawableRight="@drawable/coin"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:padding="@dimen/_7sdp"
        android:paddingTop="@dimen/_20sdp"
        android:singleLine="true"
        android:textColor="#448aff"
        android:textSize="@dimen/_22ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/line2"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/l1"
        app:layout_constraintTop_toBottomOf="@+id/text16" />

    <com.ansarbank.room.widget.MyAutoComplete
        android:id="@+id/startCard2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:maxLength="16"
        android:background="@drawable/charge_edittext_back"
        android:drawableRight="@drawable/cardicon"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:padding="@dimen/_7sdp"
        android:paddingTop="@dimen/_20sdp"
        android:singleLine="true"
        android:textColor="#448aff"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/line2"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/l1"
        app:layout_constraintTop_toBottomOf="@+id/text13" />


</android.support.constraint.ConstraintLayout>