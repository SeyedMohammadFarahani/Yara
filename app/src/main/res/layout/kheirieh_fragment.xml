<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/operator"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/charge_edittext_back"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:textDirection="rtl"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/text46"
                app:spinnerDirection="rtl" />

            <com.ansarbank.room.widget.EditText
                android:id="@+id/kheiriehCalender2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/charge_edittext_back"
                android:drawableRight="@drawable/calendar"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="5"
                android:hint="/"
                android:padding="@dimen/_7sdp"
                android:paddingTop="@dimen/_20sdp"
                android:singleLine="true"
                android:textColor="#448aff"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/l33"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/text59" />

            <com.ansarbank.room.widget.EditText
                android:id="@+id/kheiriehCCV2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/charge_edittext_back"
                android:drawableRight="@drawable/cardiconsmall"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:padding="@dimen/_7sdp"
                android:paddingTop="@dimen/_20sdp"
                android:singleLine="true"
                android:textColor="#448aff"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/l31"
                app:layout_constraintTop_toBottomOf="@+id/text58" />

            <com.ansarbank.room.widget.Text
                android:id="@+id/text59"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="تاریخ انقضا"
                android:textColor="#2a2e33"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/l33"
                app:layout_constraintTop_toBottomOf="@+id/kheiriehSerialNumber" />

            <TextView
                android:id="@+id/text58"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="CCV2"
                android:textColor="#2a2e33"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintTop_toBottomOf="@+id/kheiriehSerialNumber" />

            <android.support.constraint.Guideline
                android:id="@+id/l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <android.support.constraint.Guideline
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <android.support.constraint.Guideline
                android:id="@+id/l33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.45" />

            <android.support.constraint.Guideline
                android:id="@+id/l31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.55" />

            <ExpandableListView
                android:id="@+id/expandableListView"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/charge_edittext_back"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toTopOf="parent"></ExpandableListView>

            <com.ansarbank.room.widget.Btn
                android:id="@+id/internetConfirme"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/charge_button_back"
                android:drawableRight="@drawable/forward"
                android:elevation="@dimen/_4sdp"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="تایید و ادامه  "
                android:textColor="#ffffff"
                android:textSize="@dimen/_22ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/kheiriehCCV2"
                app:layout_constraintVertical_bias="1.0" />

            <com.ansarbank.room.widget.Text
                android:id="@+id/text31"
                android:layout_width="90dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="شماره کارت"
                android:textColor="#2a2e33"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintTop_toBottomOf="@+id/kheiriehValue" />

            <com.ansarbank.room.widget.Text
                android:id="@+id/text32"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="رمز دوم"
                android:textColor="#2a2e33"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintTop_toBottomOf="@+id/kheiriehCardNumber" />

            <com.ansarbank.room.widget.Text
                android:id="@+id/text14"
                android:layout_width="105dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="مبلغ مورد نظر"
                android:textColor="#2a2e33"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintTop_toBottomOf="@+id/operator" />

            <com.ansarbank.room.widget.Text
                android:id="@+id/text46"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="صندوق ها"
                android:textColor="#2a2e33"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintTop_toTopOf="parent" />

            <com.ansarbank.room.widget.EditText
                android:id="@+id/kheiriehValue"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/charge_edittext_back"
                android:drawableRight="@drawable/coin"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="16"
                android:padding="@dimen/_7sdp"
                android:singleLine="true"
                android:textColor="#448aff"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/text14"
                app:spinnerDirection="rtl" />

            <com.ansarbank.room.widget.MyAutoComplete
                android:id="@+id/kheiriehCardNumber"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/charge_edittext_back"
                android:drawableRight="@drawable/cardiconsmall"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="16"
                android:padding="@dimen/_7sdp"
                android:singleLine="true"
                android:textColor="#448aff"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/text31" />

            <com.ansarbank.room.widget.EditText
                android:id="@+id/kheiriehSerialNumber"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/charge_edittext_back"
                android:drawableRight="@drawable/cardicon2small"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="12"
                android:padding="@dimen/_7sdp"
                android:singleLine="true"
                android:textColor="#448aff"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/line2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/l1"
                app:layout_constraintTop_toBottomOf="@+id/text32" />
        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>


